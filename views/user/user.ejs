<div class="page-content">
    <div id="adminnav">
        <img src="https://i.ibb.co/LPds7zd/Klok-header.png">
            <% if (user) { %>
                <h3> Hi, <%= user.fullname %>!</h3>
                <br>
            <% } %>
            <div class="logout">
                <button onclick="window.location.href='/user/logout'">Logout</button>
            </div>
    </div>
    <div class="maincontainer klok">
        <div class="newKlok">
        <legend>KLOK YOUR HOURS</legend>
        <br>
        <form class="createKlok" method="POST" action="/user/home/<%= user._id %>/klok">
            <div>
                <label for="project">Project:</label>
                <select name="project" id="project" required="true">
                    <% projects.forEach((project) => { %>
                        <option value="<%= project.name %>">
                            <%= project.name %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div>
                <label for="date">Date:</label>
                <input id="date" type="date" name="date" required="true"/>
            </div>
            <div>
                <label for="hours">Hours:</label>
                <input id="hours" type="number" name="hours" required="true"/>
            </div>
            <div>
                <label for="description">Description:</label>
                <input id="description" type="text" size="50" name="description" required="true"/>
            </div>
            <div>
                <button type="submit">Klok Time</button>
            </div>
        </div>
        <br>
        <div class="recentKloks">
            <legend> RECENT KLOKS </legend>
            <div id="klokkieBox">
                <ul id="klokBox">
                <% kloks.forEach((klok) => { %>
                <li id="specificKlok">
                <p>Description: <%= klok.description %></p>
                <p>Project: <%= klok.project %></p>
                <p>Hours: <%= klok.hours %></p>
                <p>Date: <%= klok.date %></p>
                </li>
                <br>
                <% }) %>
                </ul>
            </div>
        </div>  
    </div>
</div>


