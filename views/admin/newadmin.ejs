<div class="newUser">
    <h2>ADMIN & ORGANIZATION SIGNUP</h2>
    <form class="createUser" method="POST" action="/admin/signup/">
        <fieldset>
            <label for="fullname">Full Name:</label>
          <input id="fullname" type="text" name="fullname" required="true"/>
        </fieldset>
        <fieldset>
            <label for="email">Email:</label>
            <input id="email" type="email" name="email" required="true"/>
        </fieldset>
        <fieldset>
             <label for="password">Password:</label>
            <input id="password" type="password" name="password" required="true"/>
        </fieldset>
        <fieldset>
            <label for="organization">Organization:</label>
          <input id="organization" type="text" name="organization" required="true"/>
        </fieldset>
        <fieldset>
            <input type="submit" value="SUBMIT">
        </fieldset>
    </form>
</div>