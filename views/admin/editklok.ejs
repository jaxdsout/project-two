<div class="maincontainer admin">
    <div class="newProject">
        <h2>EDIT PROJECT</h2>
        <form class="createProject" method="POST" action="/admin/edit-klok/<%= klok.id %>/?_method=PUT">
            <fieldset>
                <label for="user">User:</label>
                <input id="user" type="text" name="user"/>
            </fieldset>
            <fieldset>
                <label for="projectID">Project:</label>
                <input id="projectID" type="text" name="projectID"/>
            </fieldset>
            <fieldset>
                <label for="date">Date:</label>
                <input id="date" type="text" name="date"/>
            </fieldset>
            <fieldset>
                <label for="description">Description:</label>
                <input id="description" type="text" name="description"/>
            </fieldset>
            <fieldset>
                <label for="hours">Hours:</label>
                <input id="hours" type="number" name="hours"/>
            </fieldset>
            <fieldset>
                <button type="submit">Edit Klok</button>
            </fieldset>
        </form>
    </div>

    <div>
        <h2>DELETE KLOK</h2>
        <h5>WARNING: NO GOING BACK FROM HERE</h5>
        <form class="deleteUser" method="POST" action="/admin/edit-klok/<%= klok.id %>/delete?_method=DELETE">
            <fieldset>
                <button type="submit">Delete Klok</button>
            </fieldset>
        </form>
    </div>
</div>