<div class="page-content">
    <img src="https://i.ibb.co/w43TQjw/Admin-header.png" alt="header image">
    <p>Welcome to your dashboard!</p>
    
    <div class="logout">
        <button onclick="window.location.href='/admin/logout'">Logout</button>
    </div>

    <br>

    <div class="tabbed">
        <input type="radio" id="tab1" name="css-tabs" checked>
        <input type="radio" id="tab2" name="css-tabs" checked>
        <input type="radio" id="tab3" name="css-tabs" checked>
        

        <ul class="tabs">
        <input type="radio" id="tab1" name="css-tabs" checked>
            <li class="tab"><label for="tab1">Employees</label></li>
            <li class="tab"><label for="tab2">Projects</label></li>
            <li class="tab"><label for="tab3">Kloks</label></li>
        </ul>

        <div class="tab-content">
            <div class="header">
                <h4>All Employees</h4>
                <button id="add-user" onclick="window.location.href=`/admin/new-user`">+</button>
            </div>
           <ul>
                <% admin.users.forEach((user) => { %>
                <li>
                <%= user.username %><button onclick="window.location.href=`/admin/edit-user/<%= user._id %>`">EDIT</button>
                </li>
                <% }) %>
            </ul>
        </div>

        <div class="tab-content">
            <h4>All Projects</h4>
            <ul>
                <% admin.projects.forEach((project) => { %>
                    <li><%= project.name %> <button onclick="window.location.href='/admin/edit-project/<%= project._id %>'">EDIT</button>
                  <% }) %>
                                      

            </ul>
        </div>

        <div class="tab-content">
            <h4>All Kloks</h4>
    
            </ul>
        </div>  

    </div>
</div>








<section class="modal hidden">
    <div class="flex">
        <button class="btn-close">x</button>
    </div>
    <div>
        <h4>Add Employee</h4>
        <form class="createUser" method="POST" action="/admin/new-user">
            <fieldset>
                <label for="username">Username:</label>
                <input id="username" type="text" name="username"/>
                <label for="PIN">PIN:</label>
                <input id="PIN" type="text" name="PIN"/>
                <label for="fullmame">Full Name:</label>
                <input id="fullname" type="text" name="fullname"/>
                <label for="startDate">Start Date:</label>
                <input id="startDate" type="text" name="startDate"/>
            </fieldset>
            <fieldset>
                <label for="position">Position:</label>
                <input id="position" type="text" name="position"/>
            </fieldset>
            <fieldset>
                <label for="hourlyPay">Pay Rate:</label>
                <input id="hourlyPay" type="number" name="hourlyPay"/>
            </fieldset>
            <fieldset>
                <button type="submit">Add User</button>
            </fieldset>
        </form>

    </div>

</section>
<div class="overlay hidden"></div>
<button class="btn btn-open">Open Modal</button>



