<div class="maincontainer admin">
    <div class="editUser">
        <h2>EDIT EXISTING USER <%= user.fullname %> </h2>
        <form class="createUser" method="POST" action="/admin/modify-user/updated?_method=PUT">
            <label for="username">Username:</label>
                <input id="username" type="text" name="username"/>
            <br>
            <label for="fullmame">Full Name:</label>
                <input id="fullname" type="text" name="fullname"/>
            <br>
            <label for="PIN">PIN:</label>
                <input id="PIN" type="number" name="PIN"/>
            <br>
            <label for="startDate">Start Date:</label>
                <input id="startDate" type="text" name="startDate"/>
            <br>
            <label for="position">Position:</label>
                <input id="position" type="text" name="position"/>
            <br>
            <label for="hourlyPay">Pay Rate:</label>
                <input id="hourlyPay" type="number" name="hourlyPay"/>
            <button type="submit">Edit Employee</button>
        </form>
    </div>
    <div>
        <h2>DELETE USER</h2>
        <h5>WARNING: NO GOING BACK FROM HERE</h5>
        <form class="deleteUser" method="POST" action="/admin/modify-user/deleted?_method=DELETE">
            <button type="submit">Delete Employee</button>
        </form>

    </div>